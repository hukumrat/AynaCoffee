@model AynaCoffee.Areas.Admin.ViewModels.SignInViewModel

@{
    ViewBag.Title = "Giriş Yap";
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Ayna Coffee Admin Paneli - Giriş</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/lib/home/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/home/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/home/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/home/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/home/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/home/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/home/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/home/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/home/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/home/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/lib/home/css/main.css">
    <!--===============================================================================================-->
    <link href="~/lib/izitoast/css/iziToast.css" rel="stylesheet" />
</head>
<body>


    <div class="container-login100" style="background-image: url('/lib/home/images/1076739.jpg');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
            <form asp-controller="Account" asp-action="Login" class="login100-form validate-form">
                <span class="login100-form-title p-b-37 ">
                    Ayna Coffee Admin Paneli
                </span>
                <div asp-validation-summary="All" class="text-danger m-b-20"></div>
                <div class="wrap-input100 validate-input m-b-20" data-validate="Kullanıcı Adı giriniz.">
                    <input asp-for="UserName" class="input100" type="text" placeholder="Kullanıcı Adı">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-25" data-validate="Şifre giriniz">
                    <input asp-for="Password" class="input100" type="password" placeholder="Şifre">
                    <span class="focus-input100"></span>
                </div>
                <div class="text-center m-b-25">
                    <div class="form-check">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="RememberMe" checked>
                        <label class="form-check-label" for="RememberMe">Beni Hatırla</label>
                    </div>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Giriş Yap
                    </button>
                </div>
                <div class="text-center p-t-57 p-b-20">
                    <span class="txt1" style="color: rgba(0, 0, 0, 1);">
                        Copyright &copy;
                        <script>document.write(new Date().getFullYear());</script> | Tüm hakları sakladır | Ayna Coffee
                    </span>
                </div>
            </form>
        </div>
    </div>



    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/lib/home/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/home/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/home/vendor/bootstrap/js/popper.js"></script>
    <script src="~/lib/home/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/home/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/home/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/lib/home/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/home/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/home/js/main.js"></script>
<script src="~/lib/izitoast/js/iziToast.js"></script>
</body>
</html>
